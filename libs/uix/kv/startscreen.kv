
#:import Toolbar kivymd.toolbar.Toolbar
#:import NavDrawer libs.uix.baseclass.navdrawer.NavDrawer
#:import BaseScreen libs.uix.baseclass.basescreen.BaseScreen
#:import About libs.uix.baseclass.about.About
#:import Diary libs.uix.baseclass.diary.Diary
#:import Note libs.uix.baseclass.note.Note
#:import Note2 libs.uix.baseclass.note2.Note2
#:import Note3 libs.uix.baseclass.note3.Note3



<StartScreen>
    orientation: 'vertical'

    NavDrawer:
        id: nav_drawer

        BoxLayout:
            orientation: 'vertical'
            spacing: dp(5)

            Toolbar:
                id: action_bar
                background_color: app.theme_cls.primary_color
                title: app.title
                left_action_items: [['menu', lambda x: nav_drawer._toggle()]]
                elevation: 10
                md_bg_color: app.theme_cls.primary_color

            ScreenManager:
                id: manager

                BaseScreen:
                    id: base
                
                About:
                    id: about

                Diary:
                    id: diary

                Note:
                    id: note

                Note2:
                    id: note2

                Note3:
                    id: note3

