

<Note>:
    name: 'note'
    FloatLayout:

        Image:
            source: 'icon.png'
            opacity: .4


    BoxLayout:
        orientation: 'vertical'
        padding: [Window.width*0.1, Window.height*0.05]
        spacing: Window.height*0.02



        Label:
            size_hint: None, None
            height: dp(17)
            width: self.texture_size[0]
            halign: 'left'
            color: app.theme_cls.primary_color
            font_size: '17sp'
            text: app.translation._('Добавление записи'+'\n'+'Тип боли')

        GridLayout:
            rows: 5
            Button:
                text: '1'
            Button:
                text: '2'

            Button:
                text: '3'
            Button:
                text: '4'

            Button:
                text: '5'
            Button:
                text: '6'

            Button:
                text: '7'
            Button:
                text: '8'

            Button:
                text: '9'
            Button:
                text: '10'



        Label:
            size_hint: None, None
            height: dp(17)
            width: self.texture_size[0]
            halign: 'left'
            color: app.theme_cls.primary_color
            font_size: '17sp'
            text: app.translation._('Локализация боли')

        GridLayout:
            rows: 5
            Button:
                text: '1'
            Button:
                text: '2'

            Button:
                text: '3'
            Button:
                text: '4'

            Button:
                text: '5'
            Button:
                text: '6'

            Button:
                text: '7'
            Button:
                text: '8'

            Button:
                text: '9'
            Button:
                text: '10'


        Label:
            size_hint: None, None
            height: dp(17)
            width: self.texture_size[0]
            halign: 'left'
            color: app.theme_cls.primary_color
            font_size: '17sp'
            text: app.translation._('Комментарий к записи')

        TextInput:
            id: theme
            hint_text:'Введите Комментарий'
            size_hint: 1, 0.5
            font_size: '14sp'

        Button:
            text: 'Добавить'
            size_hint: 1, 0.25