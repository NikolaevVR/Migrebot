

<Note>:
    name: 'note'
    FloatLayout:

        Image:
            source: 'icon.png'
            opacity: .4


    BoxLayout:
        orientation: 'vertical'
        padding: [Window.width*0.1,Window.height*0.05]
        spacing: Window.height*0.02

        Label:
            size_hint: None, None
            height: dp(20)
            width: self.texture_size[0]
            halign: 'left'
            color: [app.theme_cls.primary_color]
            font_size: '18sp'
            text: app.translation._('Добавление записи')

        Label:
            size_hint: None, None
            height: dp(20)
            width: self.texture_size[0]
            halign: 'left'
            color: app.theme_cls.primary_color
            font_size: '18sp'
            text: app.translation._('Тип боли')

        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: '1'
                on_press:  app.Send_Mail()
            Button:
                text: '2'
                on_press:  app.Send_Mail()

        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: '3'
                on_press:  app.Send_Mail()
            Button:
                text: '4'
                on_press:  app.Send_Mail()


        Label:
            size_hint: None, None
            height: dp(20)
            width: self.texture_size[0]
            halign: 'left'
            color: app.theme_cls.primary_color
            font_size: '18sp'
            text: app.translation._('Локализация боли')

        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: '1'
                on_press:  app.Send_Mail()
            Button:
                text: '2'
                on_press:  app.Send_Mail()

        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: '3'
                on_press:  app.Send_Mail()
            Button:
                text: '4'
                on_press:  app.Send_Mail()

        Label:
            size_hint: None, None
            height: dp(20)
            width: self.texture_size[0]
            halign: 'left'
            color: app.theme_cls.primary_color
            font_size: '18sp'
            text: app.translation._('Комментарий к записи')

        TextInput:
            id: theme
            hint_text:'Введите Комментарий'
            size_hint: 1, 0.5
            font_size: '14sp'

        Button:
            text: 'Отправить'
            on_press:  app.Send_Mail()