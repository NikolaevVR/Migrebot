<BaseScreen>:
    name: 'base'
    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'bottom'
        BoxLayout:
            orientation: 'vertical'

            Label:
                color: 0, 0, 0, 1
                font_size: '14sp'
                text:
                    app.translation._('Здесь скоро чет появится')

        Button:
            size_hint: [0.4, 0.2]
            background_normal: 'D://учеба/Мигребот/data/images/add.png'
            background_down: 'D://учеба/Мигребот/data/images/add.png'
            on_press: app.add_note()

